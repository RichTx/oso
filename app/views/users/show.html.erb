<h2>
  <% if current_user.name %>
    <%= "#{@user.name}'s Account Settings" %>
  <% else %>
    <%= "Your Account Settings" %>
  <% end %>
</h2>

<table class='table table-hover'>
    <tbody>
        <tr>
            <td>email:</td>
            <td><%= current_user.email %></td>
        </tr>
        <tr>
            <td>password:</td>
            <td>********</td>
        </tr>
    </tbody>
</table>

<%= link_to "Edit My Account", edit_user_registration_path(current_user), :class => "btn btn-primary" %> <br>
<%= link_to "Delete My Account", registration_path(current_user),
                                :data => { :confirm => "Are you sure?" },
                                :method => :delete,
                                :class => 'btn btn-mini btn-danger' %>
